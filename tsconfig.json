{
	"compilerOptions": {
		"target": "es6",
		"module": "es6",
		"outDir": "lib",
		"strict": true,
		"esModuleInterop": true,
		"allowJs": true,
		"sourceMap": true,
		"declaration": true,
		"forceConsistentCasingInFileNames": true,
		"moduleResolution": "node",
		"noImplicitAny": false,
		"resolveJsonModule": true
	},
	"include": ["src/**/*"],
	"exclude": ["**/*.spec.ts"]
}
